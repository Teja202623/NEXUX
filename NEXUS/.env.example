# Server
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://nexus_user:nexus_password@localhost:5432/nexus_db

# ============================================
# FACEBOOK & INSTAGRAM API CREDENTIALS
# See API-SETUP-GUIDE.md for instructions
# ============================================

# Meta App Credentials
# Get from https://developers.facebook.com/apps/
FACEBOOK_APP_ID=your_app_id_here
FACEBOOK_APP_SECRET=your_app_secret_here_KEEP_SECRET

# Facebook Ad Library API Token
# Format: {APP_ID}|{APP_SECRET} or use app token from Graph API
FACEBOOK_AD_LIBRARY_TOKEN=your_ad_library_token_here

# Facebook Page Access Token (for scraping page posts)
# Get from https://developers.facebook.com/tools/explorer/
FACEBOOK_PAGE_ACCESS_TOKEN=your_long_lived_page_token_here

# Instagram Business Account Token
# Get from Meta App settings
INSTAGRAM_BUSINESS_ACCOUNT_TOKEN=your_instagram_business_token_here

# Instagram Graph API Token (for profile access)
# Get from https://developers.facebook.com/tools/explorer/ with instagram_basic scope
INSTAGRAM_ACCESS_TOKEN=your_long_lived_instagram_token_here

# ============================================
# SCRAPER SETTINGS
# ============================================

# Rate Limiting
API_RATE_LIMIT_PER_HOUR=1000
CONCURRENT_SCRAPES=5

# Scrape Creators API (alternative source)
SCRAPE_CREATORS_API_KEY=your_api_key_here
SCRAPE_CREATORS_BASE_URL=https://api.scrapecreators.com

# ============================================
# LOGGING & SECURITY
# ============================================

# JWT
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRY=7d

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# ============================================
# INTEGRATION
# ============================================

# Main Platform Integration
MAIN_PLATFORM_API_URL=http://localhost:3000
MAIN_PLATFORM_API_KEY=your_main_platform_key

# Email
EMAIL_ENABLED=false
SENDGRID_API_KEY=optional
